.service.service-beauty
  h1.service-title.
    Beauty

  .service-container.service-container--closed
    svg.service-image(xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', viewbox='0 0 1920 1280', preserveaspectratio='xMidYMid slice')
      defs
        clippath#beautyPath
          polygon.clip(points='0, 1280 0, 0 1920, 0 1920, 1280')

      image(clip-path='url(#beautyPath)', width='1920', height='1280', xlink:href='img/categories/beauty.jpg')

    .service-content
      .grid
        i.service-btn-close.fa.fa-times

        .service-caption
          h2.service-caption-title Tanning
          p.service-caption-subtitle A modern day love story

        .service-copy
