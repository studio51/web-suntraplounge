!!! 5

- suntrap = 'Suntrap Tanning &amp; Beauty Lounge'

html(lang='en')
  head
    title!= suntrap

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    meta(name='description', content='')

    link(rel='stylesheet', href='css/main.min.css')

  body

    header.header
      include templates/header

    main.main
      .pattern.pattern--hidden

      section.jumbotron
        .grid
          .row
            .cell-xs-5
              h1.section-title Welcome

              p Opening Hours on <strong>Monday - Thursday 09:00 - 17:00</strong> and <strong>Friday - Sunday 10:00 - 16:00</strong>
              p Find us on <strong><a href='https://www.facebook.com/SuntrapLounge', title='Find Suntrap Lounge on Facebook'>facebook</a></strong>

      section.accreditations
        .grid
          .row
            .cell-xs-3.cell-sm-auto.accreditation
              img(src='img/accreditations/elemis.jpg')

            .cell-xs-3.cell-sm-auto.accreditation
              img(src='img/accreditations/lycon.jpg')

            .cell-xs-3.cell-sm-auto.accreditation
              img(src='img/accreditations/cnd.jpg')

            .cell-xs-3.cell-sm-auto.accreditation
              img(src='img/accreditations/elemis.jpg')

      section#about.about
        include templates/about

      section#services.services
        .row
          .cell-xs-12.cell-md-3
            include templates/services/tanning

          .cell-xs-12.cell-md-3
            include templates/services/massage

          .cell-xs-12.cell-md-4
            include templates/services/waxing

          .cell-xs-12.cell-md-2
            include templates/services/vibraxis

          .cell-xs-12.cell-md-3
            include templates/services/facial

          .cell-xs-12.cell-md-6
            include templates/services/nails

          .cell-xs-12.cell-md-3
            include templates/services/beauty

      section#elemis.elemis
        include templates/elemis

      section#the-team.team
        include templates/team

      section.testimonials
        include templates/testimonials

    footer.footer
      include templates/footer

    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
    script(src='http://maps.google.com/maps/api/js?sensor=true')
    script(src='js/gmaps.min.js')
    script(src='js/trianglify.min.js')
    script(src='js/tween-max.min.js')
    script(src='js/scroll_to_plugin.min.js')
    script(src='js/cash.min.js')
    script(src='js/card_circle.min.js')
    script(src='js/main.min.js')
